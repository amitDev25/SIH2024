<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('./layouts/navbar') %>
        <%- include('./layouts/flash-message') %>

            <main>


                <h1><span class="goback" onclick="window.history.back()"> ‚Üê </span> Profile </h1>

                <div class="profile">
                    <div>
                        <p class="title">Name OF Post Office</p>
                        <p class="subtitle">
                            <%= person.name %>
                        </p>
                    </div>

                    <div>
                        <p class="title">Email / Username</p>
                        <p class="subtitle">
                            <%= person.email %>
                        </p>
                    </div>

                    <div>
                        <p class="title">Role</p>
                        <p class="subtitle">
                            <%= person.role %>
                        </p>
                    </div>

                    <div>
                        <p class="title">Address</p>
                        <pre class="subtitle"><%= person.address %></pre>
                    </div>

                    <div>
                        <p class="title">Pin Code</p>
                        <p class="subtitle">
                            <%= person.pincode %>
                        </p>
                    </div>

                    <div>
                        <p class="title">City/Village</p>
                        <p class="subtitle">
                            <%= person.city %>
                        </p>
                    </div>

                    <div>
                        <p class="title">State</p>
                        <p class="subtitle">
                            <%= person.state %>
                        </p>
                    </div>




                </div>

                <div class="camera-buttons">
                    <button id="startButton">Start Camera</button>
                    <button id="stopButton">Stop Camera</button>
                    
                </div>

            </main>

            <script>
                
                document.getElementById('startButton').addEventListener('click', () => {
                    fetch('/start-python')
                        .then(response => response.text())
                        .then(data => alert(data))
                        .catch(error => alert('Error: ' + error));
                });
        
                document.getElementById('stopButton').addEventListener('click', () => {
                    fetch('/stop-python')
                        .then(response => response.text())
                        .then(data => alert(data))
                        .catch(error => alert('Error: ' + error));
                });
            </script>
</body>

</html>